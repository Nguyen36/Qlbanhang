
@model IEnumerable<Quanlibanhang.Models.SanPham>
@using Quanlibanhang.Models
@{
    ViewBag.Title = "Home Page";
}
@using (Html.BeginForm())
            {
    <div class="form-group form-inline">
        @Html.TextBox("txtSearch", "", new {@class ="form-control"})
        <button type="submit">Search</button>
    </div>
               
            }
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-3" style="background-color:lavender;margin-top:5px;text-align:center;">
            <h3>@Html.DisplayFor(modelItem => item.TenSP)</h3>
            @Html.Image("../" + item.HinhSP, "alt", "100")<br />
            @Html.DisplayFor(modelItem => item.Dongia)<br />
            <a class="btn btn-info btn-sm" href="@Url.Action("Details", "Sanphams", new {id = item.MaSP})">Xem chi tiet</a>
        </div>
        }
</div>